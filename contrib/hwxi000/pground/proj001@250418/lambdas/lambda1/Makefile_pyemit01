# Makefile for
# CS525-2024F-lambdas-lambda1
########################################################################
########################################################################
CAT=cat
BUN=bun
ECHO=echo
NODE=node
PRINTF=printf
PYTHON=python3
########################################################################
########################################################################
all:: lambda1
########################################################################
clean:: ; rm -f *~
cleanall:: ; rm -f *~
cleanall:: ; rm -f OUTS/*_out.js
cleanall:: ; rm -f OUTS/*_out.py
cleanall:: ; rm -f OUTS/*_out?.js
########################################################################
testall:: \
lambda1; $(PYTHON) OUTS/$<_out.py
########################################################################
XATSHOME=./../../../../../../../XATSHOME
########################################################################
#
XATS2JS=$(XATSHOME)/xassets/JS/xats2js
XATS2PY=$(XATSHOME)/xassets/PY/xats2py
#
XATS2PY_PYEMIT01=\
$(XATSHOME)/xassets/JS/xats2py/xats2py_pyemit01_ats2_opt1.js
XATS2PY_PYEMIT01=\
$(XATSHOME)/xassets/JS/xats2py/xats2py_pyemit01_ats3_opt1.js
#
########################################################################
########################################################################
lambda1:: ; \
$(PRINTF) "## %s\n" "`date`" > OUTS/$@_out.py
lambda1:: ; $(CAT) \
$(XATS2PY)/runtime/xats2py_py1emit.py >> OUTS/$@_out.py
lambda1:: ; $(CAT) \
$(XATS2PY)/runtime/xats2py_prelude.py >> OUTS/$@_out.py
# HX-2025-04-28:
# the flag '--_XATS2PY_' can soon be dropped!
lambda1:: ; \
$(NODE) --stack-size=8192 \
$(XATS2PY_PYEMIT01) lambda1.dats --_XATS2PY_ >> OUTS/$@_out.py
